.container
  .row
    .col-xs-12
      .card.mb-4
        .card-body
          .card-time
            #{t('updated')} #{time_ago_in_words(@article.updated_at)} #{t('ago')}
          // Article Question
          .card-title.card-question
            = raw @article.question
          %hr
          // Article Answer
          .card-text.card-answer
            = raw @article.answer