- cache([@article, locale: I18n.locale]) do
  .container
    .row
      .col-xs-12
        .card.mb-4
          .card-body
            .card-time
              %span
                = t('updated')
              = datetime_ago(@article.updated_at)
            // Article Question
            .card-title.card-question#card-question
              = raw @article.question
            %hr
            // Article Answer
            .card-text.card-answer#card-answer
              = raw @article.answer